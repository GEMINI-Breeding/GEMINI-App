REACT_APP_MAPBOX_TOKEN=

# Port Configuration
REACT_APP_FRONT_PORT=3000
REACT_APP_FLASK_PORT=5050
REACT_APP_TILE_SERVER_PORT=8092
PORT=$REACT_APP_FRONT_PORT

# Application Data Directory
REACT_APP_APP_DATA=$HOME/GEMINI-App-Data

# ============================================
# Database Configuration (for local development)
# ============================================
USE_DATABASE=true
ENABLE_CACHING=true

# PostgreSQL Configuration
POSTGRES_USER=gemini_user
POSTGRES_PASSWORD=gemini_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=gemini_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
